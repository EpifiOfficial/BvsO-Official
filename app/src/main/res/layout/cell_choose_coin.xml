<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_cell_choose_coin"
    android:layout_margin="16dp"
    >

    <TextView
        android:id="@+id/Tv_Choose_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/choose_coin"
        android:textColor="@color/text_color_primary"
        android:textSize="16sp" />


    <HorizontalScrollView
        android:id="@+id/NvCoins"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Tv_Choose_coin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/Ic_Bitcoin"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_bitcoin"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/Ic_Ethereum"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_ethereum"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/Ic_Solana"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_solana"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/Ic_Litecoin"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_litecoin"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/Ic_Axie"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_axie"
                android:layout_margin="10dp"
                />



        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/BtnNext"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/NvCoins"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_default"
        android:fontFamily="@font/montserrat"
        android:paddingTop="12dp"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="@color/text_color_primary"
        android:textSize="18sp" />



</RelativeLayout>